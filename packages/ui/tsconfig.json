{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@workspace/ui/*": ["./src/*"],
      "@workspace/ui/icons" : ["./src/components/icons/index.ts"],
      "@workspace/gsap/*": ["./src/components/gsap/*"],
      "@workspace/parallax/*": ["./src/components/parallax/*"],
      "@workspace/common/*": ["./src/components/common/*"],
      "@workspace/assets/*": ["./assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
